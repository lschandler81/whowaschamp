# Production Environment Configuration
# Copy this to .env.production or set as environment variables

# Database Configuration (PostgreSQL)
DATABASE_PROVIDER="postgresql"
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# ETL Configuration
RATE_LIMIT_DELAY_MS=2000
ETL_CACHE_DIR="/app/.cache"
ETL_MAX_RETRIES=3
ETL_TIMEOUT_MS=30000

# Feature Flags
FEATURES_PPV_FLASHBACK=true
FEATURES_ENHANCED_ON_THIS_DAY=true

# Refresh Tokens (set secure random values in production)
WEEKLY_REFRESH_TOKEN=your-secure-weekly-refresh-token-here

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-secret-key-here

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=""
ANALYTICS_ID=""

# Cache Configuration
REDIS_URL=""
CACHE_TTL_SECONDS=43200  # 12 hours

# Security
ALLOWED_ORIGINS=https://your-domain.com
API_RATE_LIMIT=100  # requests per minute per IP

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance. Please check back later."

# Production ETL Scheduling
ETL_SCHEDULE_ENABLED=true
ETL_DAILY_SCHEDULE="0 2 * * *"  # Run daily at 2 AM UTC
ETL_WEEKLY_FULL_SYNC="0 3 * * 0"  # Full sync Sundays at 3 AM UTC
